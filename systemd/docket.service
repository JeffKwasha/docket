[Unit]
Description=Docket uWSGI app
After=syslog.target
Requires=docket-celery-io.service
Requires=docket-celery-query.service
Requires=docket.socket

[Service]
EnvironmentFile=-/etc/sysconfig/docket
ExecStart=/usr/sbin/uwsgi \
          --ini /etc/docket/docket-uwsgi.ini
User=docket
Group=docket
Restart=on-failure
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all
WorkingDirectory=/opt/rocknsm/docket

[Install]
WantedBy=multiuser.target
